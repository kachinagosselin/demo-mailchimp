<!-- /.modal compose message -->
<div class="modal fade" id="compose" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h4 class="modal-title">Compose Message</h4>
      </div>
        <%= form_for @message, :class=> "form-horizontal", :url => { :controller => :messages, :action => :create } do |f| %>

        <div class="modal-body" style="height:425px;">
          <div class="form-group">
            <label class="col-sm-2" for="inputSubject">Subject</label>
            <div class="col-sm-10">
              <%= f.text_field :title, autofocus: true, class: "form-control", placeholder: "Subject" %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-12" for="inputBody">Message</label>
            <div class="col-sm-12">
              <%= f.text_area :content, class: "form-control", rows: 16 %>
            </div>
          </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button> 
        <button type="button" class="btn btn-primary pull-left">Save Draft</button>
        <% if @message.persisted? %>
        <a href='#' class='js-cancel-form-job-seeker'>Cancel</a>
        <%= f.submit  'Save Changes', class: 'btn btn-primary' %>
        <% else %>
        <%= f.submit  'Send Message', class: 'btn btn-success' %>
        <% end %>

      </div>
      <% end %>




    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal compose message -->